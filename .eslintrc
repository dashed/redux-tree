{
    "parser": "babel-eslint",

    "env": {
        "browser": true,
        "node": true
    },

    "rules": {
        "strict": 0,
        "quotes": [1, "single", "avoid-escape"],
        "indent": [2, 4],
        "comma-style": [2, "last"],
        "no-var": 2,
        "camelcase": [2, {"properties": "never"}],
        "no-underscore-dangle": 0,
        "new-cap": [2, {
            "capIsNewExceptions": ["Record", "Map", "List"]
        }],
        "dot-location": [2, "property"],
        "no-floating-decimal": 2,
        "no-self-compare": 2,
        "no-throw-literal": 2,
        "wrap-iife": [2, "any"],
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "no-unused-expressions": 2,
        "eol-last": 2,
        "dot-notation": 2,
        "consistent-return": 2,
        "no-shadow": 2,
        "no-undefined": 2,
        "no-multi-spaces": 2,
        "linebreak-style": 2
    }
}
